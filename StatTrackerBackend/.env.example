# Baseball League Stat Tracker - Environment Variables
# Copy this file to .env and fill in your values

# OpenAI Configuration (Required for AI-generated storylines)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# CORS Configuration
# Frontend origin URL (adjust port if needed)
FRONTEND_ORIGIN=http://localhost:5173

# Application Settings
APP_NAME=Baseball League Stat Tracker
DEBUG=true

# API Configuration (optional - defaults shown)
API_V1_PREFIX=